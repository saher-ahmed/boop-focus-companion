{
  "manifest_version": 3,
  "name": "Boop",
  "version": "1.0",
  "description": "A gentle focus companion. Set your task, get friendly check-ins every 15 minutes.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Boop"
  },
  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
